doctype html
html(lang='ru' ng-app="app")

    head
        meta(charset='utf-8')

        title Заголовок
        meta(name='description', content='')

        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')

        link(rel="stylesheet", href="css/main.css")

        

    body(ng-app="app")

        img(src="img/bg-image.svg" alt="" class="bg-img")

        header.header.anim
            .clearfix
                .logo.header__logo
                    a(href="#").logo__link Exchanger
                nav.nav.header__nav
                    ul.nav__list
                        li.nav__item
                            a(href="#").nav__link.nav__link_active
                                i.icon-notifications.nav__icon
                        li.nav__item
                            a(href="#").nav__link Logout
                                i.icon-log-out.nav__icon.icon_dark

        .container

            .top-form.anim
                form.form()

                    .form-group
                        .lbl I'd like to

                        select() sell
                            option buy

                        input.input(value="10,000")

                        select(customSelect) USD
                            option EUR
                            option GBR
                            option CHF

                        .lbl for

                        select USD
                            option EUR
                            option GBR
                            option CHF

                    .summ
                        .summ__text You'll get
                        .summ__value 1000 
                            span.summ__currency chf

                    button(type="submit" class="btn")
                        i.btn__icon.icon-exchange-icon 
                        span.btn__text Exchange

            main.main

                .row
                    .col-7.col-md-12

                        section.transactions.anim

                            header.transactions__header.clearfix

                                h2.title.transactions__title transactions

                                ul.tab-list
                                    li.tab-list__item
                                        a(href='#').tab-list__link This week
                                    li.tab-list__item
                                        a(href='#').tab-list__link This month
                                    li.tab-list__item.tab-list__item_active
                                        a(href='#').tab-list__link This year

                .row
                    .col-6.col-offset-1.col-md-10
                        .chart(ng-controller="LineCtrl" id="chart").anim
                            canvas(id="line"  class="chart chart-line" chart-data="data" 
                                chart-labels="labels" chart-series="series" chart-options="options" 
                                chart-dataset-override="datasetOverride" chart-click="onClick" chart-colors="colors")

                        .row.anim
                            .col-4 
                                .card
                                    .card__img
                                        img(src="img/usa-flag.svg" alt="").card__pic
                                    .card__info
                                        .card__value
                                            span.currency $
                                            span.value 212
                                            span.symbol k
                                        .card__text exchanged

                            .col-4
                                .card
                                    .card__img
                                        img(src="img/euro-flag.svg" alt="").card__pic
                                    .card__info
                                        .card__value
                                            span.currency €
                                            span.value 152
                                            span.symbol k
                                        .card__text exchanged

                            .col-4
                                .card
                                    .card__img
                                        img(src="img/uk-flag.svg" alt="").card__pic
                                    .card__info
                                        .card__value
                                            span.currency £
                                            span.value 32
                                            span.symbol k
                                        .card__text exchanged

                    .col-4.col-offset-1.col-md-10

                        section.section.anim

                            table.table
